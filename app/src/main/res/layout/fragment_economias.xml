<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.FragmentEconomias"
    android:background="@color/light_gray">

    <TextView
        android:id="@+id/tv_label_economia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:scaleX="0.9"
        android:scaleY="1.4"
        android:text="Economias"
        android:layout_marginTop="20dp"
        android:textColor="@color/lighter_black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_divisoria"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/bit_darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_label_economia"
        android:layout_marginHorizontal="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_imagem_economia"
        android:layout_width="0dp"
        android:layout_height="450dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/verde_ganho"
        app:layout_constraintTop_toBottomOf="@id/cv_divisoria"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/iv_economia"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/clocksavings"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>







        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_quantidade_economizada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:scaleX="0.9"
        android:scaleY="1.4"
        android:text="Você já economizou 3000 reais!"
        android:layout_marginTop="20dp"
        android:textColor="@color/lighter_black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_imagem_economia"
        />




</androidx.constraintlayout.widget.ConstraintLayout>