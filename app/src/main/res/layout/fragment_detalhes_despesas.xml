<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <ImageView
        android:id="@+id/month_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:background="@drawable/selector_month_button"/>

    <ImageView
        android:id="@+id/iv_calendar"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/calendar"
        app:layout_constraintTop_toTopOf="@id/month_button"
        app:layout_constraintStart_toStartOf="@id/month_button"
        app:layout_constraintBottom_toBottomOf="@id/month_button"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv_btn_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.9"
        android:scaleY="1.4"
        android:text="Agosto"
        android:textColor="@color/lighter_black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_calendar"
        app:layout_constraintTop_toTopOf="@id/iv_calendar"
        app:layout_constraintBottom_toBottomOf="@id/iv_calendar"
        app:layout_constraintEnd_toEndOf="@id/month_button"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_voltar_categoria"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?android:attr/actionBarItemBackground"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tv_label_categorias"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_categorias"
        />

    <TextView
        android:id="@+id/tv_label_categorias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:scaleX="0.9"
        android:scaleY="1.4"
        android:text="Categorias"
        android:layout_marginTop="60dp"
        android:textColor="@color/lighter_black"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn_voltar_categoria"
        app:layout_constraintTop_toBottomOf="@id/month_button"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/item_categoria"
        android:id="@+id/rv_categorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_categorias"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_divisoria"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:cardBackgroundColor="@color/bit_darker_gray"
        app:layout_constraintTop_toBottomOf="@id/rv_categorias"
        android:layout_marginHorizontal="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ganhos_despesas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cv_divisoria"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_demonstrativo_mensal"/>





</androidx.constraintlayout.widget.ConstraintLayout>