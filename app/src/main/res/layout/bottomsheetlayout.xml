<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_divisoria"
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/bit_darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"/>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_divisoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_btn_despesas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:textSize="20sp"
            android:checked="true"
            android:text="despesa"/>

        <RadioButton
            android:id="@+id/radio_btn_ganhos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="ganho"/>

    </RadioGroup>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lighter_gray"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="15dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/lighter_gray"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/payment_cash"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:background="@drawable/selector_paying_method"/>

            <ImageView
                android:id="@+id/payment_card"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toEndOf="@id/payment_cash"
                android:layout_marginStart="10dp"
                android:background="@drawable/selector_paying_method"/>

            <ImageView
                android:id="@+id/iv_cash"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cash"
                app:layout_constraintTop_toTopOf="@id/payment_cash"
                app:layout_constraintStart_toStartOf="@id/payment_cash"
                app:layout_constraintBottom_toBottomOf="@id/payment_cash"
                android:layout_marginStart="11dp"/>


            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/card"
                app:layout_constraintTop_toTopOf="@id/payment_card"
                app:layout_constraintBottom_toBottomOf="@id/payment_card"
                app:layout_constraintStart_toStartOf="@id/payment_card"
                android:layout_marginStart="11dp"/>

            <TextView
                android:id="@+id/tv_cash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleX="0.9"
                android:scaleY="1.4"
                android:text="Dinheiro"
                android:textColor="@color/lighter_black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/iv_cash"
                app:layout_constraintBottom_toBottomOf="@id/iv_cash"
                app:layout_constraintStart_toEndOf="@id/iv_cash"
                />


            <TextView
                android:id="@+id/tv_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleX="0.9"
                android:scaleY="1.4"
                android:text="CartÃ£o"
                android:textColor="@color/lighter_black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/iv_card"
                app:layout_constraintBottom_toBottomOf="@id/iv_card"
                app:layout_constraintStart_toEndOf="@id/iv_card"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_voltar_categoria_bs"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_arrow_back_24"
                app:layout_constraintStart_toStartOf="parent"
                android:background="?android:attr/actionBarItemBackground"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/tv_label_categorias"
                app:layout_constraintBottom_toBottomOf="@id/tv_label_categorias"
                />

            <TextView
                android:id="@+id/tv_label_categorias"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:scaleX="0.9"
                android:scaleY="1.4"
                android:layout_marginTop="20dp"
                android:text="Categorias"
                android:textColor="@color/lighter_black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/btn_voltar_categoria_bs"
                app:layout_constraintTop_toBottomOf="@id/et_nome_despesa"
                />


            <EditText
                android:id="@+id/et_nome_despesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="20dp"
                android:layout_marginTop="26dp"
                android:paddingStart="16dp"
                android:hint="nome despesa"
                android:background="@drawable/edit_text_border"
                app:layout_constraintTop_toBottomOf="@id/iv_cash"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/item_categoria"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tv_label_categorias"/>


            <EditText
                android:id="@+id/et_custo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="20dp"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:hint="custo"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_border"
                app:layout_constraintTop_toBottomOf="@id/rv_categoria"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_salvar_despesa_ganho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="salvar despesa"
                android:backgroundTint="@color/light_purple"
                android:textColor="@color/white"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/et_custo"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>












        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>